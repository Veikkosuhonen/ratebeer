<table class="table table-hover">
  <thead>
  <tr>
    <th>Beer</th>
    <th>Style</th>
    <th>Brewery</th>
    <th>Average rating</th>
  </tr>
  </thead>
  <tbody>
  <% beers.each do |beer| %>
    <tr>
      <th scope="row">
        <%= link_to beer.name, beer %>
      </th>
      <td>
        <%= link_to beer.style %>
      </td>
      <td>
        <%= link_to beer.brewery %>
      </td>
      <td>
        <%= beer.average_rating || '-' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
