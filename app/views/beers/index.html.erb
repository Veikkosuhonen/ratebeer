<p style="color: green"><%= notice %></p>

<h1>Beers</h1>

<div id="beers">
  <% @beers.each do |beer| %>
    <%= link_to beer.name, beer %>

    <p>
      <strong>Style:</strong>
      <%= beer.style %>
    </p>

    <p>
      <strong>Brewery:</strong>
      <%= link_to beer.brewery.name, beer.brewery %>
    </p>
  <% end %>
</div>

<%= link_to "New beer", new_beer_path if current_user %>
<%= link_to "Breweries", breweries_path %>
