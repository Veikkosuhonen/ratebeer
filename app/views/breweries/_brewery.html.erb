<% cache brewery do %>

<div id="<%= dom_id brewery %>">
  <h2>
    <%= brewery.name %>
    <% unless brewery.is_active %>
      <span class="badge bg-secondary">retired</span>
    <% end %>
  </h2>

  <i>
    Established in
    <%= brewery.year %>
  </i>

  <p>
    Beers:
    <%= brewery.beers.count %>
  </p>

  <section>
    <%= render "beers/beers_table", beers: brewery.beers %>
  </section>

  <% unless brewery.ratings.empty? %>
  <p>
    Brewery has <%=  pluralize(brewery.ratings.count, 'rating')  %> with an average
    of <%= brewery.average_rating.to_f %>
  </p>
  <% end %>

</div>

<% end %>
