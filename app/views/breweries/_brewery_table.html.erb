<div>
  <table class="table mb-3">
    <thead>
    <tr>
      <th>Name</th>
      <th>Year</th>
      <th>Beers</th>
      <th>Average rating</th>
    </tr>
    </thead>
    <tbody>
    <% breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td><%= brewery.year %></td>
        <td><%= brewery.beers.size %></td>
        <td><%= round(brewery.average_rating) || '-' %></td>
      </tr>
    <% end %>
    </tbody>
</table>
</div>