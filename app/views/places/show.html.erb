<h1><%= @place.name %></h1>


<%= render :partial => "places/weather", :object => @weather %>

<section>
  <% Place.rendered_fields.each do |field| %>
    <div style="display: flex">
      <span style="display: block; margin-right: 1rem"><%= field %>: </span>
      <strong><%= @place.send(field) %></strong>
    </div>
  <% end %>
</section>

<%= link_to "Back to search", places_path %>
