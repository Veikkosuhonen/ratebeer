<h2>Latest ratings</h2>

<table class="table table-hover">
  <thead>
  <tr>
    <th>Beer</th>
    <th>Rating</th>
    <th>User</th>
    <th>Date</th>
  </tr>
  </thead>
  <tbody>
  <% @latest_ratings.each do |rating| %>
    <tr>
      <td><%= link_to rating.beer %></td>
      <td><%= rating.score %></td>
      <td><%= link_to rating.user %></td>
      <td><%= rating.created_at %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<h2>Top beers</h2>
<%= render "beers/beers_table", beers: @top_beers %>

<h2>Top breweries</h2>
<%= render "breweries/brewery_table", breweries: @top_breweries %>

<h2>Top styles</h2>
<%= render "styles/styles_table", styles: @top_styles %>

<h2>Top users</h2>
<%= render "users/users_table", users: @top_users %>
