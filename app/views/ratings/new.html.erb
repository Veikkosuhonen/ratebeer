<h2>Create new rating</h2>

<%= form_for(@rating) do |form| %>
  <% if @rating.errors.any? %>
    <section id="error_explanation">
      <h2><%= pluralize(@rating.errors.count, "error") %> prohibited rating from being saved:</h2>

      <ul>
        <% @rating.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </section>
  <% end %>

  <section>
    <%= form.label :beer_id, "Beer" %>
    <%= form.select :beer_id, options_from_collection_for_select(@beers, :id, :to_s, selected: @rating.beer_id) %>
  </section>

  <section>
    <%= form.label :score %>
    <%= form.number_field :score %>
  </section>

  <section>
    <%= form.submit class: "btn-main" %>
  </section>

<% end %>
